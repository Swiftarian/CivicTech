# ==========================================
# 志工管理系統環境變數設定 (Docker Production)
# Fire Volunteer Management System Environment (Docker)
# ==========================================

# 伺服器設定
NODE_ENV=production
PORT=3000

# MySQL 資料庫設定
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_DATABASE=volunteer_management
MYSQL_USER=volunteer_user
MYSQL_PASSWORD=your_strong_password_here
MYSQL_PORT=3306

# 資料庫連線 URL
DATABASE_URL=mysql://volunteer_user:your_strong_password_here@mysql:3306/volunteer_management

# JWT Secret (請務必更改為安全的隨機字串)
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production

# 應用程式設定
VITE_APP_ID=fire_volunteer_management
VITE_APP_TITLE=臺東縣消防局志工管理平台
VITE_OAUTH_PORTAL_URL=http://localhost:3000
OAUTH_SERVER_URL=http://localhost:3000

# 管理員 Open ID (可選)
OWNER_OPEN_ID=

# API 設定
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# 消防申報系統連結 (Streamlit App)
VITE_FIRE_DEPT_APP_URL=http://localhost:8501

# AWS S3 設定 (如果使用)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Email 設定 (如果使用)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# Twilio SMS 設定 (如果使用)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
